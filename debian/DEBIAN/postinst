#!/bin/sh
# postinst script for wkhtmltopdf
set -e

# Update library cache
if [ -x /sbin/ldconfig ]; then
    /sbin/ldconfig
fi

# Display installed backend information
if [ -x /usr/local/bin/wkhtmltopdf ]; then
    echo "wkhtmltopdf 0.13.0 installed successfully!"
    echo ""
    echo "Run 'wkhtmltopdf --help | head -20' to see which backend is active."
    echo ""
fi

exit 0
